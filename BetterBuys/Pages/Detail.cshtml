@page
@model DetailModel

<section class="detail wrapper">
    <div class="product-detail-body">
        <div class="product-detail-img">
            <img src="@Model.ProductDetail.ImageUri" />
        </div>
        <div class="product-detail-body-text">
            <h5>@Model.ProductDetail.Name</h5>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star-half"></i>
            <p>@Model.ProductDetail.Price.ToString("C")</p>
            <p>
                @Model.ProductDetail.Description
            </p>
            <form method="post">
                <div class="product-detail-button">
                    <div class="quantity">
                        <select class="form-control" input type="number" asp-for="@Model.ProductDetail.Quantity" name="quantity">
                            @for (int i = 1; i <= 10; i++)
                            {
                                <option>@i</option>
                            }
                        </select>
                    </div>
                    <div class="add-to-cart">
                        <input class="add-to-cart-btn" type="submit" value="Add to Cart" id="Add" />
                    </div>
                    @if (Model.warningMsg != "")
                    {
                        <p class="alert-danger quantity-alert">@Model.warningMsg</p>
                    }
                    <div class="product-detail-body-link">
                        <a asp-page="index" class="product-detail-link">Continue Shopping</a>
                    </div>
                </div>
                <input type="hidden" asp-for="@Model.ProductDetail.Id" name="id">
                <input type="hidden" asp-for="@Model.ProductDetail.Name" name="name">
                <input type="hidden" asp-for="@Model.ProductDetail.Price" name="price">
                <input type="hidden" asp-for="@Model.ProductDetail.ImageUri" name="pictureUri">
            </form>
        </div>
    </div>
</section>